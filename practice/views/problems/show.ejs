<!DOCTYPE html>
<head>
    <%- include('../partials/head') %>
</head>
<body>
    <%- include('../partials/nav') %>

    <div class = "problem problem-show">
        <h2>Show</h2>
        <div>
            <h3><%= problem.name%></h3>
            <label>contents</label><span><%= problem.content %></span>
            <br>
            <label>answer</label><span><%= problem.answer %></span>
        </div>
        <div class = "problem-menu">
            <a href="/problems/<%= problem._id %>/edit">Edit</a>
            <form action="/problems/<%= problem._id %>?_method=delete" method="post">
                <a href="#" onclick = "confirm('Do you want to delete this?')? this.parentElement.submit():null;">Delete</a>
            </form>
        </div>
    </div>
</body>
</html>